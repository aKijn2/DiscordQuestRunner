<ContentPage
    x:Class="DiscordQuestRunner.Pages.DeleterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Deleter Protocol"
    BackgroundColor="{AppThemeBinding Light={StaticResource PageBgLight}, Dark={StaticResource PageBgDark}}">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderWidth" Value="1.5" />
            <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource EntryTextLight}, Dark={StaticResource EntryTextDark}}" />
            <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource PlaceholderLight}, Dark={StaticResource PlaceholderDark}}" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource EntryBgLight}, Dark={StaticResource EntryBgDark}}" />
            <Setter Property="HeightRequest" Value="44" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>
    </ContentPage.Resources>

    <Grid
        Padding="25"
        RowDefinitions="Auto,Auto,*,Auto,Auto"
        RowSpacing="20">

        <!--  Header Section  -->
        <VerticalStackLayout
            Grid.Row="0"
            HorizontalOptions="Start"
            Spacing="5">
            <Label
                CharacterSpacing="1"
                FontAttributes="Bold"
                FontSize="22"
                Text="MESSAGE DELETER"
                TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
            <Label
                CharacterSpacing="2"
                FontSize="10"
                Text="PURGE PROTOCOL ACTIVE"
                TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
            <BoxView
                Margin="0,5,0,0"
                BackgroundColor="{AppThemeBinding Light={StaticResource DividerLight}, Dark={StaticResource DividerDark}}"
                HeightRequest="2"
                HorizontalOptions="Start"
                WidthRequest="30" />
        </VerticalStackLayout>

        <!--  Configuration Deck  -->
        <Grid
            Grid.Row="1"
            ColumnDefinitions="*,*"
            ColumnSpacing="15">
            <VerticalStackLayout Grid.Column="0" Spacing="2">
                <Label
                    Margin="5,0"
                    FontAttributes="Bold"
                    FontSize="9"
                    Text="CHANNEL_ID"
                    TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
                <Entry
                    x:Name="ChannelIdEntry"
                    FontSize="11"
                    Keyboard="Numeric"
                    Placeholder="Target ID"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Spacing="2">
                <Label
                    Margin="5,0"
                    FontAttributes="Bold"
                    FontSize="9"
                    Text="USER_ID"
                    TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
                <Entry
                    x:Name="UserIdEntry"
                    FontSize="11"
                    Keyboard="Numeric"
                    Placeholder="Target ID" />
            </VerticalStackLayout>
        </Grid>

        <!--  Operational Log  -->
        <Border
            Grid.Row="2"
            Padding="15"
            BackgroundColor="{AppThemeBinding Light={StaticResource CardBgLight}, Dark={StaticResource CardBgDark}}"
            Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
            StrokeShape="Rectangle"
            StrokeThickness="1.5">
            <Grid RowDefinitions="*,Auto">
                <ScrollView x:Name="LogScroll" Grid.Row="0">
                    <Label
                        x:Name="StatusLbl"
                        FontFamily="Consolas"
                        FontSize="10"
                        LineHeight="1.4"
                        Text="WAITING FOR PARAMETERS..."
                        TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}" />
                </ScrollView>

                <Button
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    Padding="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BtnSecondaryBgLight}, Dark={StaticResource BtnSecondaryBgDark}}"
                    BorderWidth="1"
                    Clicked="OnCopyLogClicked"
                    FontSize="9"
                    HeightRequest="24"
                    HorizontalOptions="End"
                    Text="SAVE LOG"
                    TextColor="{AppThemeBinding Light={StaticResource BtnSecondaryTextLight}, Dark={StaticResource BtnSecondaryTextDark}}"
                    WidthRequest="80" />
            </Grid>
        </Border>

        <!--  Deployment Controls  -->
        <VerticalStackLayout Grid.Row="3" Spacing="8">
            <ActivityIndicator
                x:Name="LoadingIndicator"
                IsRunning="False"
                IsVisible="False"
                Color="{AppThemeBinding Light={StaticResource SpinnerLight}, Dark={StaticResource SpinnerDark}}"
                HeightRequest="24"
                WidthRequest="24"
                HorizontalOptions="Center" />

            <Grid
                ColumnDefinitions="2*,*"
                ColumnSpacing="10">
                <Button
                    x:Name="DeleteBtn"
                    Grid.Column="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BtnPrimaryBgLight}, Dark={StaticResource BtnPrimaryBgDark}}"
                    Clicked="OnDeleteClicked"
                    HeightRequest="50"
                    Text="START PURGE"
                    TextColor="{AppThemeBinding Light={StaticResource BtnPrimaryTextLight}, Dark={StaticResource BtnPrimaryTextDark}}" />

                <Button
                    x:Name="AbortBtn"
                    Grid.Column="1"
                    BackgroundColor="{AppThemeBinding Light={StaticResource BtnSecondaryBgLight}, Dark={StaticResource BtnSecondaryBgDark}}"
                    Clicked="OnAbortClicked"
                    HeightRequest="50"
                    IsEnabled="False"
                    Text="ABORT"
                    TextColor="{AppThemeBinding Light={StaticResource BtnSecondaryTextLight}, Dark={StaticResource BtnSecondaryTextDark}}" />
            </Grid>
        </VerticalStackLayout>

        <Label
            Grid.Row="4"
            Margin="0,5,0,0"
            FontSize="9"
            HorizontalOptions="Center"
            Text="SECURE TERMINAL CONNECTION"
            TextColor="{AppThemeBinding Light={StaticResource TextMutedLight}, Dark={StaticResource TextMutedDark}}" />
    </Grid>
</ContentPage>
