<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiscordQuestRunner.MainPage"
             BackgroundColor="#1F2937"> <!-- Dark Slate Gray -->

    <Grid RowDefinitions="Auto,*,Auto" Padding="25" RowSpacing="20">
        
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="5">
            <Label Text="Discord Quest Runner"
                   TextColor="White"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            
            <Label Text="Automated Protocol V1.0"
                   TextColor="#9CA3AF"
                   FontSize="14"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Status / Output Area -->
        <Border Grid.Row="1" 
                Stroke="#374151"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10"
                BackgroundColor="#111827"
                Padding="15">
            <ScrollView>
                <Label x:Name="StatusLbl" 
                       Text="Ready to initialize..."
                       TextColor="#E5E7EB"
                       FontSize="13"
                       LineHeight="1.5" />
            </ScrollView>
        </Border>

        <!-- Action Button (Removed Copy Button) -->
        <Button Grid.Row="2"
                x:Name="RunBtn"
                Text="Execute Automation"
                Clicked="OnRunClicked"
                BackgroundColor="#3B82F6"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="16"
                HeightRequest="50"
                CornerRadius="8"
                Shadow="{Shadow Brush=Black, Offset='0,4', Opacity=0.2}"/>

    </Grid>
</ContentPage>
