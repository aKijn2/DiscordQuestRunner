<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiscordQuestRunner.MainPage"
             BackgroundColor="#0C0C0C">

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Padding="20">
        
        <!-- Header -->
        <Label Grid.Row="0" 
               Text="> DISCORD_QUEST_RUNNER_V1.0"
               TextColor="#00FF00"
               FontFamily="Consolas, Courier New, Monospace"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Start" />

        <Label Grid.Row="1" 
               Text="> SYSTEM_STATUS: READY..."
               TextColor="#00AA00"
               FontFamily="Consolas, Courier New, Monospace"
               FontSize="14"
               Margin="0,5,0,20"
               HorizontalOptions="Start" />

        <!-- Console Output Area -->
        <Border Grid.Row="2" 
                Stroke="#003300"
                StrokeThickness="1"
                BackgroundColor="#000000"
                Padding="10"
                Margin="0,0,0,10">
            <ScrollView>
                <Label x:Name="StatusLbl" 
                       Text="> Waiting for user input..."
                       TextColor="#00FF00"
                       FontFamily="Consolas, Courier New, Monospace"
                       FontSize="12" />
            </ScrollView>
        </Border>

        <!-- Copy Button -->
        <Button Grid.Row="3"
                Text="[ COPY OUPUT ]"
                Clicked="OnCopyClicked"
                BackgroundColor="#001100"
                TextColor="#00FF00"
                BorderColor="#00FF00"
                BorderWidth="1"
                FontFamily="Consolas, Courier New, Monospace"
                FontSize="14"
                HorizontalOptions="Fill"
                HeightRequest="40"
                CornerRadius="0"
                Margin="0,0,0,10"/>

        <!-- Action Button -->
        <Button Grid.Row="4"
                x:Name="RunBtn"
                Text="[ EXECUTE_INJECTION ]"
                Clicked="OnRunClicked"
                BackgroundColor="#001100"
                TextColor="#00FF00"
                BorderColor="#00FF00"
                BorderWidth="1"
                FontFamily="Consolas, Courier New, Monospace"
                FontSize="14"
                HorizontalOptions="Fill"
                HeightRequest="40"
                CornerRadius="0"/>

    </Grid>
</ContentPage>
